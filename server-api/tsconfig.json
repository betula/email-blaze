{
  "compilerOptions": {
    "outDir": "./build",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2015",
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": [
    "node_modules",
    "build"
  ]
}
